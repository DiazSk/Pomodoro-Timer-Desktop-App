{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "A Pomodoro Timer Desktop Application",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pomodoro-timer"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir --config.win.signAndEditExecutable=false"
  },
  "build": {
    "appId": "com.pomodoro.timer",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    },
    "asar": false
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-debug": "^3.2.0",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  }
}
